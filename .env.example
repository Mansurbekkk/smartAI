# Smart Scholar AI - Barcha environment o'zgaruvchilari
# Ushbu faylni .env.example sifatida saqlang
# Haqiqiy .env faylingizga quyidagilarni nusxalab kiriting

# ─── App ────────────────────────────────────────────────────
DEBUG=False
SECRET_KEY=your-super-secret-key-change-in-production

# ─── Database ───────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/smartscholar

# ─── OpenAI ─────────────────────────────────────────────────
OPENAI_API_KEY=sk-your-openai-api-key-here

# ─── AWS S3 ─────────────────────────────────────────────────
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=smartscholar-uploads
AWS_REGION=us-east-1

# ─── MathPix (LaTeX OCR) ────────────────────────────────────
MATHPIX_APP_ID=your-mathpix-app-id
MATHPIX_APP_KEY=your-mathpix-app-key

# ─── Sentry ─────────────────────────────────────────────────
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ─── Redis ──────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
